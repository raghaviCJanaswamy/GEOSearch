# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=geosearch
POSTGRES_USER=geouser
POSTGRES_PASSWORD=geopass
POSTGRES_DSN=postgresql://geouser:geopass@localhost:5432/geosearch

# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=geo_gse_embeddings

# NCBI E-utilities Configuration
# TODO: Set your real email address below (required by NCBI)
NCBI_EMAIL=raghavi.janaswamy@sdstate.edu
NCBI_TOOL=GEOSearch
NCBI_API_KEY=  # Optional: increases rate limit to 10 req/s
RATE_LIMIT_QPS=3  # Requests per second (3 without API key, 10 with)

# Embedding Configuration
EMBEDDING_PROVIDER=local  # Options: local, openai
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2  # For local provider
EMBEDDING_DIMENSION=384  # Dimension for all-MiniLM-L6-v2

# OpenAI Configuration (if using openai provider)
OPENAI_API_KEY=  # Your OpenAI API key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small  # Options: text-embedding-3-small, text-embedding-ada-002

# Search Configuration
SEMANTIC_TOP_K=100
LEXICAL_TOP_K=100
FINAL_TOP_K=50
RRF_K=60  # Reciprocal Rank Fusion constant

# Logging
LOG_LEVEL=INFO

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
